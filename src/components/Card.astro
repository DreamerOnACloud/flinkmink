---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;

const [day, month, year] = post.data.date.split("/");
const date = new Date(`${year}-${month}-${day}`).toLocaleDateString("en-GB", {
  year: "numeric",
  month: "2-digit",
  day: "2-digit",
});


---

<a href={`/blog/${post.slug}`} class="card-link">
  <div class="card">
    <div class="image-container">
      <Image
        src={post.data.image}
        alt={post.data.title}
        class="post-image"
      />
    </div>
    <div class="card-content">
      <h3 class="post-title">{post.data.title}</h3>
      {date && <p class="date">{date}</p>}
      <div class="description">{post.data.description}</div>
    </div>
  </div>
</a>

<style>
  * {
    box-sizing: border-box;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card {
    display: flex;
    flex-direction: column;
    aspect-ratio: 1 / 1.1; /* more square with a bit extra height */
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .image-container {
    width: 100%;
    height: 60%;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .card-content {
    height: 40%;
    padding: 1rem;
    border-top: 1px solid #eee;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .post-title {
    margin: 0;
    font-size: 1.25rem;
  }

  .date {
    font-size: 0.85rem;
    color: gray;
    margin: 0.25rem 0 0.5rem;
  }

  .description {
    margin: 0;
    font-size: 0.95rem;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>