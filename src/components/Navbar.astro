---
import { Image } from "astro:assets";
import LogoImg from "../images/flinkmink-logo.png";
import MenuImg from "../images/feather--menu.svg";
---
<nav class="navbar">
  <a href="/">
  <div class="logo-container">
      <div class="logo-img">
        <Image 
          src={LogoImg}
          alt="logo"
          width={32}
        />
      </div>
      <div class="logo-text">FLINKMINK</div>
  </div>
</a>

  <input type="checkbox" id="menu-toggle" class="menu-toggle" />
  <label for="menu-toggle" class="menu-button">
    <Image src={MenuImg} alt="Menu icon" width={40}/> 
  </label>

  <ul class="nav-links">
    <li>
      <a href="/" class={Astro.url.pathname === "/" ? "active" : ""}>Home</a>
    </li>
    <li>
      <a href="/blog" class={Astro.url.pathname.includes("/blog") ? "active" : ""}
        >Posts</a>
    </li>
    <li>
      <a
        href="/merchandise"
        class={Astro.url.pathname === "/merchandise" ? "active" : ""}
        >Merchandise</a>
    </li>
    <li>
      <a href="/about" class={Astro.url.pathname === "/about" ? "active" : ""}
        >About Us</a>
    </li>
  </ul>
</nav>

<style>
  .navbar {
    /* layout */
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;

    /* Ensures it's always stuck on top & above other content */
    position: sticky;
    top: 0;
    z-index: 10; 

    /* shadow */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);

    /* fill */
    background-color: rgb(229, 237, 243);
  }

  /* Logo area styling */
  .logo-container {
    /* layout */
    display: flex;
    align-items: center;

    padding: 0.2rem 0.5rem;

    /* fill */
    color: #1e3350;

    /* typography */
    font-weight: bold;
    font-size: 1.2rem;
  }

  .logo-img {
    /* layout */
    height: 30px;
    margin-right: 0.5rem;
  }

  /* Hide the actual checkbox used for toggling */
  .menu-toggle {
    display: none;
  }

  /* "MENU" button label */
  .menu-button {
    /* layout */
    display: none;
    cursor: pointer;

    /* typography */
    font-size: 1rem;
    font-weight: bold;

    /* appearance */
    background: none;
    border: none;
    color: black;
  }

  /* Nav links container */
  .nav-links {
    /* layout */
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  /* Nav link base style */
  .navbar a {
    /* typography */
    text-decoration: none;
    font-weight: bold;

    /* fill */
    color: black;
  }

  /* Active nav link */
  .navbar a.active {
    /* fill */
    color: #1793ff;
  }

  /* Logo hover effect */
  .logo a:hover {
    /* fill */
    color: #1793ff;
  }

  /* --- Responsive --- */
  @media (max-width: 800px) {

    /* Show menu toggle button */
    .menu-button {
      display: block;
    }

    /* Stack nav links vertically and hide initially */
    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 103%;
      left: 0;
      background: white;
      width: 100%;
      height: calc(100vh - 80px);
      box-sizing: border-box;
      padding: 8px;
    }

    /* Show nav links when toggle is checked */
    .menu-toggle:checked + .menu-button + .nav-links {
      display: flex;
    }

    /* Mobile nav link style */
    .nav-links li a {
      display: flex;
      height: fit-content;
      font-size: 24px;
      margin: 4px 0;
    }

    /* Hover background */
    .nav-links li:hover {
      background-color: #f0f0f0;
    }
  }

  @media (max-width: 640px) {
    .navbar {
      padding: 0.6rem;
    }
</style>