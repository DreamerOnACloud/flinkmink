---
// GlobalStyles.astro
import "@fontsource-variable/inter";
---

<style is:global>
/* Base layout rules*/
html, body {
  min-width: 320px;         /* Prevent layout from collapsing on tiny viewports */
  overflow-x: auto;         /* Allow horizontal scrolling if content overflows */
}

/* Body styling */
body {
  margin: 0;
  width: 100%;
  overflow-y: scroll;       /* Reserve space for vertical scrollbar to avoid layout shift */

  /* Color and font */
  background-color: #FCFCFC;
  color: #2c2c2c;
  font-family: 'Inter', sans-serif;

  /* Font rendering improvements */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Anchor elements */
a {
  all: unset;               /* Remove all default link styles */
  cursor: pointer;          /* Optional: preserve clickable behavior */
}

  </style>