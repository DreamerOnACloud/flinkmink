---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  date?: string;
  href?: string;
  imageSrc: ImageMetadata;
}

const {
  title,
  description,
  date = '',
  href,
  imageSrc
} = Astro.props;
---

<article class="card">
  <div class="card-image">
    <Image src={imageSrc} alt={title} />
  </div>
  <div class="card-content">
    <h3>{title}</h3>
    <p class="description">{description}</p>
    {date && <p class="date">{date}</p>}
  </div>
</article>

<style>
  .card {
    border-radius: 12px;
    overflow: hidden;
    background: white;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    min-width: 360px;
    font-family: sans-serif;
  }

  .card-image img {
    width: 100%;
    display: block;
    object-fit: cover;
  }

  .card-content {
    padding: 1rem;
  }

  .card-content h3 {
    margin: 0 0 0.25rem;
    font-size: 1rem;
    font-weight: bold;
  }

  .card-content .description {
    margin: 0 0 1rem;
    font-size: 0.9rem;
    color: #333;
  }

  .card-content .date {
    font-size: 0.85rem;
    color: #666;
    margin: 0;
  }
</style>
