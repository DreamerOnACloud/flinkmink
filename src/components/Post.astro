---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;

const [day, month, year] = post.data.date.split("/");
const date = new Date(`${year}-${month}-${day}`).toLocaleDateString("en-GB", {
  year: "numeric",
  month: "2-digit",
  day: "2-digit",
});


---

<a href={`/blog/${post.slug}`}>
  <div class="card">
    <div class="image-container">
      <Image
        src={post.data.image}
        alt={post.data.title}
        class="post-image"
      />
    </div>
    <div class="card-content">
      <h2 class="post-title">{post.data.title}</h2>
      <p class="date">{date}</p>
      <p class="description">{post.data.description}</p>
    </div>
  </div>
</a>

<style>
  .card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    height: auto;          /* ðŸ§  allows content to define height */
    font-family: sans-serif;
    overflow: hidden;      /* âœ… prevent overflow when clamped */
    border-radius: 1rem;
  }

  .card:hover {
    background-color: aliceblue;
  }

.image-container {
  aspect-ratio: 4 / 3;
  flex: 1; /* takes 1 part */
  border-radius: 1rem;
  overflow: hidden;
  background-color: grey;
  max-height: 320px;   /* ðŸ”’ never exceeds this */
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-content {
  display: flex;
  flex-direction: column;
  flex: 2; /* takes 2 parts */
  padding: 8px;
  gap: 8px;
}

.card-content h2 {
  margin: 0;
  font-size: 1.1rem;
  font-weight: bold;
}

.card-content .date {
  margin: 0.25rem 0;
  font-size: 0.85rem;
  color: gray;
}

.card-content .description {
  margin: 0;
  font-size: 0.95rem;
  max-width: 800px;
  line-height: 120%;;
  
  display: -webkit-box;
  -webkit-line-clamp: 5; /* number of lines to show */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

@media (max-width: 640px) {
  .card {
    flex-direction: column;
    max-height: 600px;
  }

  .image-container {
    width: 100%;
    height: 200px; /* optional: gives image a fixed height */
  }
}

</style>
