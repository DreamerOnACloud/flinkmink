---
// Supports weights 100-900
import '@fontsource-variable/inter';
---

<style is:global>
  
/* Base layout */
html, body {
  min-width: 320px;
  overflow-x: auto;
}

/* Body styling */
body {
  margin: 0;
  width: 100%;
  overflow-y: scroll;

  background-color: #FCFCFC;
  color: #2c2c2c;
  font-family: 'Inter Variable', sans-serif; /* âœ… fixed name */
  font-weight: 400;

  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Link reset */
a {
  all: unset;
  cursor: pointer;
}
</style>
